<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#4D666666"
    android:id="@+id/chatCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/profile_image"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/chatNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/chatImage"/>

        <TextView
            android:id="@+id/chatLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/chatImage"
            android:layout_below="@id/chatNameTextView"
            android:text="Last message"/>


        <TextView
            android:id="@+id/chatLastMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="02 Apr"/>

        <TextView
            android:id="@+id/chatLastMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/chatLastMessageDate"
            android:layout_alignParentTop="true"
            android:text="11:22 PM, "/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>